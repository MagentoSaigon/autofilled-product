version: '2'
services:
  custom_server:
    ports:
     - "8080:80"
    volumes:
     - ../src:/var/www/src
     - ../bin:/var/www/bin
     - ../credentials:/var/www/credentials
    links:
     - db_custom
    container_name: custom_server
    build:
      context: ./apache
    environment:
        XDEBUG_CONFIG: remote_host=10.0.75.1
        PATH: /usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/var/www/bin
  db_custom:
    ports:
     - "3306:3306"
    container_name: db_custom
    image: mariadb
    environment:
        MYSQL_ALLOW_EMPTY_PASSWORD: "yes"
