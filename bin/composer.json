{
  "require": {
    "zookal/harris-street-impex": "dev-master",
    "aoepeople/aoe_scheduler": "^1.5",
    "phpspec/phpspec": "~2.3.0",
    "mercuriel/smartreindex": "*@dev",
    "behat/behat": "~2.5",
    "kalenjordan/magerun-addons": "dev-master",
    "mercuriel/autofill": "*@dev"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.firegento.com"
    },
    {
      "type": "path",
      "url": "../src/modules/*/*",
      "options": {
        "symlink": true
      }
    }
  ],
  "extra":{
    "magento-root-dir": "../src/magento/",
    "auto-append-gitignore": true,
    "magento-deploystrategy": "symlink",
    "magento-force":true
  },
  "config":{
    "secure-http":false,
    "bin-dir": "bin"
  },
  "autoload": { "psr-0": {
    "": [
      "../src/magento/app",
      "../src/magento/app/code/local",
      "../src/magento/app/code/community",
      "../src/magento/app/code/core",
      "../src/magento/lib"
    ]
  }}
}
